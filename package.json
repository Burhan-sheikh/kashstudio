{
  "name": "kashstudio",
  "version": "1.0.0",
  "description": "Digital Application Marketplace for production-ready software products",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "emulators": "firebase emulators:start",
    "deploy:rules": "firebase deploy --only firestore:rules,storage:rules",
    "deploy:functions": "cd functions && npm run build && cd .. && firebase deploy --only functions",
    "deploy:hosting": "npm run build && netlify deploy --prod"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "firebase": "^10.12.0",
    "firebase-admin": "^12.1.0",
    "@tanstack/react-query": "^5.32.0",
    "zustand": "^4.5.2",
    "zod": "^3.23.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.3.0",
    "lucide-react": "^0.378.0",
    "date-fns": "^3.6.0",
    "react-hook-form": "^7.51.0",
    "@hookform/resolvers": "^3.3.4",
    "razorpay": "^2.9.3",
    "stripe": "^15.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.4.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.14"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
